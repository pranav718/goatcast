generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Genre {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  slug     String   @unique
  podcasts Podcast[]
}

model Podcast {
  id          String    @id   @default(auto()) @map("_id")   @db.ObjectId
  title       String 
  description String
  thumbnail   String
  spotifyUrl  String
  genre       Genre   @relation(fields: [genreId], references: [id])
  genreId     String    @db.ObjectId
}